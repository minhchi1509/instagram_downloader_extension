{
  "name": "instagram-downloader",
  "displayName": "Instagram Downloader",
  "version": "0.0.1",
  "description": "Download Instagram photos and videos with one click.",
  "author": "minhchi1509",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@ant-design/cssinjs": "^1.23.0",
    "antd": "^5.24.4",
    "axios": "^1.8.3",
    "dayjs": "^1.11.13",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sonner": "^2.0.1",
    "tailwindcss": "3.4.1",
    "uuid": "^11.1.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "cookies",
      "downloads",
      "webRequest",
      "webRequestBlocking",
      "https://*.instagram.com/*",
      "https://*.cdninstagram.com/*",
      "activeTab",
      "scripting",
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "https://*.instagram.com/*",
      "https://*.cdninstagram.com/*"
    ]
  }
}
